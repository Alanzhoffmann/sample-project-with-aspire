@page "/products"
@using AspireSampleApp.Contracts.DTOs
@attribute [StreamRendering(true)]

@inject ProductApiClient ProductApi

<PageTitle>Products</PageTitle>

<h1>Products</h1>

<p><a href="/products/new" class="btn btn-primary">Create New Product</a></p>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else if (products.Length == 0)
{
    <p>No products found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@(product.Description ?? "-")</td>
                    <td>
                        @if (product.HasThirdPartyData)
                        {
                            @product.Price.ToString("C")
                        }
                        else
                        {
                            <span class="text-warning" title="No inventory data from third-party service">N/A &#9888;</span>
                        }
                    </td>
                    <td>
                        @if (product.HasThirdPartyData)
                        {
                            @product.Stock
                        }
                        else
                        {
                            <span class="text-warning" title="No inventory data from third-party service">N/A &#9888;</span>
                        }
                    </td>
                    <td><a href="/products/@product.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private ProductDto[]? products;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductApi.GetProductsAsync();
    }
}
